# AWS Configuration for SageMaker Training
# Copy this file to .env and fill in your values

# AWS Credentials (if not using AWS CLI default profile)
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key
# AWS_DEFAULT_REGION=us-east-1

# SageMaker Configuration
SAGEMAKER_ROLE_ARN=arn:aws:iam::326614947732:role/AmazonSageMakerFullAccess
S3_BUCKET=amazon-sagemaker-326614947732-us-east-1-b6aed9d1f258
AWS_REGION=us-east-1

# Model Configuration
BASE_MODEL_NAME=meta-llama/Llama-3.2-3B-Instruct
TRAINING_INSTANCE_TYPE=ml.p4d.24xlarge
INFERENCE_INSTANCE_TYPE=ml.g5.2xlarge

# Training Hyperparameters
NUM_EPOCHS=3
BATCH_SIZE=4
LEARNING_RATE=2e-4
LORA_R=16
LORA_ALPHA=32

# Weights & Biases (Optional)
# WANDB_API_KEY=your_wandb_key
# WANDB_PROJECT=cesco-sllm-finetuning

# Cost Optimization
USE_SPOT_INSTANCES=false
